<Window x:Class="ClickUpDesktopPowerTools.UI.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClickUp PowerTools Overlay"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowActivated="False"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True"
        PreviewMouseLeftButtonDown="OnPreviewMouseLeftButtonDown"
        PreviewMouseMove="OnPreviewMouseMove"
        PreviewMouseLeftButtonUp="OnPreviewMouseLeftButtonUp">
    <Border x:Name="ContentRoot"
            Height="40"
            Background="#80363636"
            BorderBrush="#E6363636"
            BorderThickness="1"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- App Icon Block: 32px fixed width, singleton for interaction -->
            <Border Grid.Column="0"
                    Width="32"
                    Height="40"
                    Background="Transparent"
                    CornerRadius="20,0,0,20">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Hide" Click="OnHideClicked" />
                        <MenuItem Header="Settings" Click="OnSettingsClicked" />
                        <Separator />
                        <MenuItem Header="Exit" Click="OnExitClicked" />
                    </ContextMenu>
                </Border.ContextMenu>
                <TextBlock Text="âš¡"
                           FontSize="14"
                           Foreground="#E5E5E5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Border>

            <!-- Tool Container: Auto width, holds registered tool controls -->
            <StackPanel x:Name="ToolContainer"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left" />
        </Grid>
    </Border>
</Window>
