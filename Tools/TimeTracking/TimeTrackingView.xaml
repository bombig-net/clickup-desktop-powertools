<UserControl x:Class="ClickUpDesktopPowerTools.Tools.TimeTracking.TimeTrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="200">
    <UserControl.ContextMenu>
        <ContextMenu>
            <!-- Placeholder items for future tool-specific actions -->
            <MenuItem Header="View in ClickUp" IsEnabled="False" />
            <MenuItem Header="Copy Task ID" IsEnabled="False" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Border Background="#80363636"
            BorderBrush="#E6363636"
            BorderThickness="1"
            CornerRadius="6"
            Padding="6,3"
            Width="200"
            Height="40">
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Task info: name + timer -->
            <StackPanel Grid.Column="0" 
                        Orientation="Vertical" 
                        VerticalAlignment="Center"
                        Margin="0,0,6,0">
                <TextBlock Text="{Binding CurrentTaskName}" 
                           FontFamily="Segoe UI"
                           FontSize="10.67"
                           FontWeight="SemiBold"
                           Foreground="#E5E5E5"
                           MaxWidth="130"
                           TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding CurrentTaskName}"/>
                <TextBlock Text="{Binding ElapsedTime}" 
                           FontFamily="Consolas"
                           FontSize="10.67"
                           Foreground="#E5E5E5"
                           Margin="0,1,0,0"/>
            </StackPanel>

            <!-- Start/Stop button with constrained width for stability -->
            <Button Grid.Column="1"
                    Content="{Binding StartStopButtonText}" 
                    Command="{Binding StartStopCommand}"
                    MinWidth="50"
                    MaxWidth="50"
                    Height="26"
                    Padding="4,2"
                    FontFamily="Segoe UI"
                    FontSize="10.67"
                    FontWeight="SemiBold"
                    Foreground="#E5E5E5"
                    Background="#D21E24"
                    BorderBrush="#D21E24"
                    BorderThickness="1"
                    VerticalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
